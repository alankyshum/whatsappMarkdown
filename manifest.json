{
	"manifest_version": 2,
	"name": "Whatsapp Markdown Parser",
	"description": "An extension to parse markdown codes in whatsapp messages",
	"version": "1.0",
	"browser_action": {
		"default_icon": {
			"19": "assets/32x20.png",
			"38": "assets/66x40.png"
		},
		"default_title": "Whatsapp Markdown Parser"
	},
	"content_scripts": [{
		"matches": ["*://web.whatsapp.com/*"],
		"css": ["css/markdown.css"],
		"js": ["bower_components/markdown-it/dist/markdown-it.min.js", "js/client.js"],
		"run_at": "document_end"
	}]
}
